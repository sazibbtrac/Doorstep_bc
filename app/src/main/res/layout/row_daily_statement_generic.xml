<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="1.0">

        <TextView
            android:id="@+id/tx_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".166"
            android:gravity="center"
            android:text="Jan 20"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tx_t_delivery"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".166"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/black"

            android:textSize="12sp" />

        <TextView
            android:id="@+id/tx_t_subTotal"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".166"
            android:gravity="center"

            android:text="৳ 8156"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tx_t_vat"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".166"
            android:gravity="center"
            android:text="৳ 845"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tx_t_delivery_charge"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".166"
            android:gravity="center"

            android:text="৳ 1500"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tx_t_grand_total"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".166"
            android:gravity="center"

            android:text="৳ 1500"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/fed_low_off_white">

    </FrameLayout>

</LinearLayout>