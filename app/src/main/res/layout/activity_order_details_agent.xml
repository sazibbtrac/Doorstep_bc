<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_back"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lin_two_id"
            android:layout_alignParentTop="true">


            <LinearLayout
                android:id="@+id/lin_inside_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/row_agent_above_job_details"
                    android:id="@+id/row_agent_above_job_details"/>

                <include layout="@layout/row_agent_my_job_one"
                    android:id="@+id/row_agent_my_job_one"/>

                <include layout="@layout/row_agent_my_job_two"
                    android:id="@+id/row_agent_my_job_two"/>

                <include layout="@layout/row_agent_rider_assigned"
                    android:id="@+id/row_agent_rider_assigned"/>


            </LinearLayout>


        </ScrollView>

        <LinearLayout
            android:id="@+id/lin_two_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lin_agent_job_ready"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:visibility="gone">


                <TextView
                    android:id="@+id/tx_ready"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/button_rectengle"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/ready_to_pickuup"
                    android:textColor="@color/white"
                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_agent_job_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="1.0">


                <TextView
                    android:id="@+id/tx_accept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_rectengle"
                    android:gravity="center"
                    android:padding="8dp"

                    android:text="@string/accept"
                    android:textColor="@color/white"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/tx_decline"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    android:layout_weight=".5"
                    android:background="@drawable/button_rectengle"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/decline"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>