<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <TextView
            android:id="@+id/tx_food_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text="Double Whopper" />

        <TextView
            android:id="@+id/tx_food_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:gravity="center"
            android:text="BDT 500" />

        <TextView
            android:id="@+id/tx_wuantity"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:gravity="center"
            android:text="1" />

        <TextView
            android:id="@+id/tx_item_amount"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:gravity="right"
            android:text="BDT 500" />
    </LinearLayout>

    <TextView
        android:id="@+id/tx_topping"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="+ Add Chsee\n+Add Chicken N Crispy"
        android:textColor="@color/LightcolorAccent"
        android:visibility="visible" />
</LinearLayout>