<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@color/cart_bg_color"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar"
            android:id="@+id/toolbar"/>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:elevation="2dp"
            android:focusableInTouchMode="true"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            tools:itemCount="10"
            tools:listitem="@layout/row_food_sub_category" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/white_rounded_bg"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search_bl"
                android:padding="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etSearch"
                android:layout_weight="8"
                android:hint="Search here"
                android:textColor="@color/txt_color_bl"
                android:fontFamily="@font/gilroy_bold"
                android:backgroundTint="@color/white"

                />

            <ImageView
                android:id="@+id/ivCross"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_cross"
                android:paddingTop="10dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:scrollbars="vertical"
            tools:itemCount="5"
            tools:listitem="@layout/row_food_item"
            android:layout_marginBottom="45dp"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="horizontal"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:id="@+id/llCountBottom"
        android:weightSum="10"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_rectengle"
        >
        <TextView
            android:id="@+id/tvCountBottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:layout_marginLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:fontFamily="@font/gilroy_bold"
            android:text=""
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#FFF"
            android:textSize="12sp"
            android:background="@drawable/badge_circle"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="View your cart"
            android:layout_marginRight="20dp"
            android:layout_weight="6.2"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvTotal"
            android:text=""
            android:layout_weight="3"
            android:textColor="@color/white"
            android:textAlignment="gravity"
            android:gravity="right"
            android:layout_marginRight="10dp"
            />


    </LinearLayout>

</RelativeLayout>